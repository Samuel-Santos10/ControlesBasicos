<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_margin="5dp"
    tools:context=".lista_usuarios">

    <EditText
        android:id="@+id/txtBuscarUsuario"
        android:layout_width="351dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:background="@drawable/custom_input"
        android:hint="Buscar Usuario" />
    <ListView
        android:id="@+id/ltsUsuarios"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtBuscarUsuario"
        android:layout_marginTop="2dp" />

</RelativeLayout>