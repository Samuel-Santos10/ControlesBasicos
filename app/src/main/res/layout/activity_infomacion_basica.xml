<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".InformacionBasica">

    <TextView
        android:id="@+id/etConceptos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="60dp"
        android:text="Conceptos Basicos de una PC"
        android:textColor="@android:color/background_light"
        android:textSize="18dp" />

    <Button
    android:id="@+id/btnRegresarMenu"
        android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:background="@drawable/custom_buttom_2"

    android:text="Atras" />

    <Button
        android:id="@+id/btnCompu"
        android:layout_width="293dp"
        android:layout_height="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/custom_buttom"
        android:text="¿Que es una computadora?"
        android:textColor="@android:color/black"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/btnRam"
        android:layout_width="293dp"
        android:background="@drawable/custom_buttom"
        android:layout_height="60dp"
        android:text="¿Que es RAM?"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="235dp"
        android:textColor="@android:color/black"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/btnCPU"
        android:layout_width="293dp"
        android:layout_height="60dp"
        android:text="¿Que es CPU?"
        android:background="@drawable/custom_buttom"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="300dp"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btnProcesador"
        android:layout_width="293dp"
        android:layout_height="60dp"
        android:text="¿Que es procesador?"
        android:layout_marginLeft="60dp"
        android:background="@drawable/custom_buttom"
        android:layout_marginTop="365dp"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btnMotherBoard"
        android:layout_width="293dp"
        android:layout_height="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="430dp"
        android:background="@drawable/custom_buttom"

        android:text="¿Que es motherboard?"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

</RelativeLayout>