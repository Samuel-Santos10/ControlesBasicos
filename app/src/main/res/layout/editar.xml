<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Editar">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:hint="EDITAR CUENTA"
        android:textSize="20sp"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/etEdiUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:hint="Usuario"
        android:textSize="20sp"
        android:enabled="false"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/etEdiPass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:hint="Password"
        android:textSize="20sp"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/etEdiNombre"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:hint="Nombre"
        android:inputType="textEmailAddress"/>


    <EditText
        android:id="@+id/etEdiApellido"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:hint="Apellido"
        android:textSize="20sp"
        android:inputType="textEmailAddress"/>

    <Button
        android:id="@+id/btnEdiActualizar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FF0000"
        android:layout_margin="20dp"
        android:textColor="#ffffff"
        android:text="Actualizar"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnEdiCancelar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#0000FF"
        android:layout_margin="20dp"
        android:textColor="#ffffff"
        android:text="Cancelar "
        android:textSize="30sp"
        android:textStyle="bold"/>

</LinearLayout>