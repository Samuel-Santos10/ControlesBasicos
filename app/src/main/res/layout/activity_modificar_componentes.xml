<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModificarComponentes">

    <Button
        android:id="@+id/btnAddCPU"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Agregar CPU"
        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/btnAddMother"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="140dp"
        android:text="Agregar Motherboard" />

    <Button
        android:id="@+id/btnAddGPU"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Agregar GPU"
        android:layout_marginTop="200dp" />

    <Button
        android:id="@+id/btnAddRAM"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Agregar RAM"
        android:layout_marginTop="260dp" />

    <Button
        android:id="@+id/btnAddDisco"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Agregar Disco"
        android:layout_marginTop="320dp" />

    <Button
        android:id="@+id/btnAddFuente"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Agregar Fuente"
        android:layout_marginTop="380dp" />


    <Button
        android:id="@+id/btnRegresarMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:background="#4CAF50"
        android:text="Atras" />

</RelativeLayout>