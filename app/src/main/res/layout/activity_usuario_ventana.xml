<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
 >


    <View
        android:id="@+id/view5"
        android:layout_width="1000dp"
        android:layout_height="100dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/wave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topView" />

    <ImageButton
        android:id="@+id/btnInfoBasica"
        android:layout_width="297dp"
        android:layout_height="144dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/custom_buttom_3" />

    <ImageButton
        android:id="@+id/btnPcPersonalizada"
        android:layout_width="303dp"
        android:layout_height="134dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="310dp"
        android:background="@drawable/custom_buttom_4" />

    <ImageButton
        android:id="@+id/btnNovedades"
        android:layout_width="302dp"
        android:layout_height="141dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="490dp"
        android:background="@drawable/custom_buttom_5" />

    <TextView
        android:id="@+id/tvTituloInfoBasica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="230dp"

        android:shadowColor="#E6D3D3"
        android:text="Informacion Basica"
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvTitulPcPersonalizada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="410dp"
        android:shadowColor="#E6D3D3"
        android:text="PC Personalizada"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvTituloNovedades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="590dp"
        android:shadowColor="#E6D3D3"
        android:text="Novedades"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="160dp"
        android:layout_height="112dp"
        android:src="@android:drawable/ic_menu_info_details" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="82dp"
        android:layout_height="116dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="290dp"
        android:src="@drawable/ic_menu_manage" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="93dp"
        android:layout_height="77dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="490dp"
        android:src="?attr/actionModePasteDrawable" />

</RelativeLayout>