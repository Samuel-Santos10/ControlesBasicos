<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
   >
    <View
        android:id="@+id/topView"
        android:layout_width="1000dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view5"
        android:layout_width="1000dp"
        android:layout_height="100dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/wave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topView" />

    <ImageButton
        android:id="@+id/btnInfoBasica"
        android:layout_width="297dp"
        android:layout_height="144dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/custom_buttom_3" />

    <ImageButton
        android:id="@+id/btnPcPersonalizada"
        android:layout_width="303dp"
        android:layout_height="134dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/custom_buttom_4" />

    <ImageButton
        android:id="@+id/btnNovedades"
        android:layout_width="302dp"
        android:layout_height="141dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="490dp"
        android:background="@drawable/custom_buttom_5" />

    <TextView
        android:id="@+id/tvTituloInfoBasica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="320dp"

        android:shadowColor="#E6D3D3"
        android:text="Informacion Basica"
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvTitulPcPersonalizada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="390dp"

        android:shadowColor="#E6D3D3"
        android:text="PC PERSONALIZADA"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvTituloNovedades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="520dp"
        android:shadowColor="#E6D3D3"
        android:text="NOVEDADES"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_marginTop="200dp"
       android:layout_marginLeft="160dp"
        android:layout_height="112dp"
        android:src="@android:drawable/ic_menu_info_details" />

</RelativeLayout>