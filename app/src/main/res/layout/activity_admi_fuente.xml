<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fdt"

    tools:context=".AdmiFuente">

    <EditText
        android:id="@+id/etBuscarProducto"
        android:layout_width="349dp"
        android:layout_height="34dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:hint="Buscar Productos"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/lvsFuente"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp" />

    <TextView
        android:id="@+id/tvTituloFuente"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/menu_nuevo"
        android:gravity="center"
        android:text="FUENTE"
        android:textSize="18sp" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAgregarProductos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="18dp"
        android:clickable="true"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="#252121" />

</RelativeLayout>
